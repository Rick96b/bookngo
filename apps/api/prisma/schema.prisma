
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  name String
  surname String
  password String
  email String @unique
  telegramUsername String @unique @default("") @map("telegram-username")
  phoneNumber String @unique @default("") @map("phone-number")

  companyId Int? @map("company-id")
  employmentStatus String @map("employment-status")
  vacationsId Int[] @unique @map("vacations-id")
  accumulatedVacationDays Int? @default(0) @map("accumulated-vacation-days")
  compensationDays Int? @default(0) @map("compensation-days")
  vacationBalance Int? @default(0) @map("vacation-balance")
}
